# LiteLLM Configuration
LITELLM_MASTER_KEY=your-secure-master-key-here

# API Keys for Providers (add only what you need)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
# Add more provider keys as needed

# Database Configuration (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/litellm

# Redis Configuration (optional, for rate limiting)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# UI Admin Password (optional, if enabling UI)
UI_ADMIN_PASSWORD=secure-admin-password

# Domain Configuration (for production)
DOMAIN=api.yourdomain.com

# Additional LiteLLM Settings
LITELLM_LOG_LEVEL=INFO
LITELLM_TELEMETRY=false 
